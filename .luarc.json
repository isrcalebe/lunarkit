{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/refs/heads/master/setting/schema.json",
  "runtime": {
    "version": "Lua 5.4"
  },
  "format": {
    "enable": true,
    "defaultConfig": {
      "indent_style": "space",
      "indent_size": "2"
    }
  },
  "diagnostics.globals": [
    "lk_obj_create",
    "lk_dump",
    "lk_dump_print",
    "lk_ansi_setup",
    "lk_ansi",
    "lk_ansi_palette",
    "lk_ansi_raw_paint",
    "lk_ansi_paint",
    "lk_ansi_no_paint",
    "lk_ansi_html_tags"
  ]
}
